{
  "name": "direct",
  "version": "0.1.0",
  "private": true,
  "description": "An advanced Electron-based Windows optimizer, tweaker, and debloater.",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "build:css": "tailwindcss -i ./input.css -o ./dist/main.css",
    "build:frontend": "esbuild index.jsx --bundle --outfile=dist/bundle.js --jsx=automatic --platform=browser --target=es2020 && npm run build:css",
    "start": "npm run build:frontend && electron .",
    "pack": "npm run build:frontend && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "systeminformation": "^5.22.11",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.0",
    "tailwindcss": "^3.4.3"
  },
  "build": {
    "appId": "com.javon.direct",
    "files": [
      "**/*",
      "!src/",
      "!backend/",
      "!electron/",
      "!services/",
      "!release/",
      "!*.txt"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator"
    }
  }
}